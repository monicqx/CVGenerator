<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.monic.cvgenerator.MenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/M_createCVBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:height="70dp"
                android:background="@color/colorButtonMediumDark"
                android:text="Create CV"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/M_viewCVBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:height="70dp"
                android:background="@color/colorButtonMedium"
                android:text="View CV"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/M_editCVBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:height="70dp"
                android:background="@color/colorButtonLightMedium"
                android:text="Edit CV"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/M_tipsCVBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:height="70dp"
                android:background="@color/colorButtonLight"
                android:text="Tips"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
