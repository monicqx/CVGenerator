<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.monic.cvgenerator.MenuActivity"
    android:orientation="vertical"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create CV"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/colorButtonMediumDark"
        android:height="70dp"
        android:id="@+id/M_createCVBtn"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View CV"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/colorButtonMedium"
        android:height="70dp"
        android:id="@+id/M_viewCVBtn"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit CV"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/colorButtonLightMedium"
        android:height="70dp"
        android:id="@+id/M_editCVBtn"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/colorButtonLight"
        android:height="70dp"
        android:id="@+id/M_tipsCVBtn"/>
</LinearLayout>
