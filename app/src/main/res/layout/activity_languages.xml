<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.monic.cvgenerator.LanguagesActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:shadowColor="@color/colorAccent"
            android:text="@string/languages_title"
            android:textColor="@color/colorHeader"
            android:textSize="27dp" />

        <Button
            android:id="@+id/L_toITSkillsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="@string/to_next_activity"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </GridLayout>

    <Button
        android:id="@+id/L_addNewLanguageBtn"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:background="@color/colorHeader"
        android:text="@string/add"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <ListView
        android:id="@+id/L_languagesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
